{
  "manifest_version": 3,
  "name": "Text to iCal",
  "version": "2.0",
  "description": "Highlight text and convert it to an iCal file with modern UI and dark mode support",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["chrono.min.js", "content.js"]
    }
  ]
}